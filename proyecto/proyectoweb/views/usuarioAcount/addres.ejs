<section class="service py-lg-4 py-md-3 py-sm-3 py-3">
    <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
        <h2 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Mis direcciones</h2>
        <div class="row text-center">
            <div class="col-sm-2">
            </div>
            <% let existenDirecciones = typeof direcciones !== 'undefined' %>
            <div class="col-lg-8">
                <%if (existenDirecciones) {%>
                    <table>
                        <tr>
                            <th>Identificador</th>
                            <th>Latitud</th>
                            <th>Longitud</th>
                            <th>Referencia</th>
                        </tr>
                        <% direcciones.forEach( (objeto)=>{ %>
                            <tr>
                                <td><%= objeto.id %></td>
                                <td><%= objeto.latitud %></td>
                                <td><%= objeto.longitud %></td>
                                <td><%= objeto.referencia %></td>
                                <form action="../direccion/eliminar/<%= objeto.id %>"
                                      method="POST"
                                >
                                    <button type="submit">Eliminar</button>
                                </form>
                            </tr>
                        <% } ) %>
                    </table>
                <%} else { %>
                    <p class="title">Aqu√≠ puedes ver sus direcciones guardads.</p>
                <%}%>
            </div>
        </div>
    </div>
</section>