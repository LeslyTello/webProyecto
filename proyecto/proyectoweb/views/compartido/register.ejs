<!-- Font Icon -->
<link rel="stylesheet" href="/fonts/material-icon/css/material-design-iconic-font.min.css">
<!-- Main css -->
<link rel="stylesheet" href="/scss/logreg.css">
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <span onclick="document.getElementById('id02').style.display='none'" class="close" title="Close">&times;</span>
                <h2 class="form-title">Registrarse</h2>
                <form action="/usuario/crear" method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <label for="name"><i class="zmdi"></i></label>
                        <input type="text" name="name" id="name" placeholder="Nombre">
                    </div>
                    <div class="form-group">
                        <label for="lastname"><i class="zmdi"></i></label>
                        <input type="text" name="lastname" id="lastname" placeholder="Apellido">
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi"></i></label>
                        <input type="text" name="telephone" id="telephone" placeholder="Teléfono">
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="zmdi"></i></label>
                        <input type="email" name="email" placeholder="Correo electrónico">
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="zmdi"></i></label>
                        <input type="password" name="pass"  placeholder="Contraseña">
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi"></i></label>
                        <input type="password" name="re_pass" id="re_pass" placeholder="Repita su contraseña">
                    </div>

                    <div class="form-group">
                        Fecha de nacimiento
                    </div>
                    <div class="form-group">
                        <input type="date" class="form-control" name="birth" id="birth">
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Registrarse">
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="/images/signup-image.jpg" alt="sing up image"></figure>
                <a
                        onclick="document.getElementById('id01').style.display='block', document.getElementById('id02').style.display='none'">
                    I am already member
                </a>
            </div>
        </div>
    </div>
</section>